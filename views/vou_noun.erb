<html>
  <head>
    <title>World Vision</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<link type="text/css" href="/app.css" rel="stylesheet" />	
  </head>
  <body style="font-family: sans-serif;">
<%= erb :vou_header %>
	<a  href="/voulenteer">待譯信件</a>
	<a  href="/voulenteer/template">各國信件翻譯範本</a>
	<a  href="/voulenteer/note">各國翻譯注意事項</a>
	<!-- <a href="/voulenteer/noun">各國翻譯常見名詞</a> -->
    <a href="/serve?blob-key=<%= @template.tempate_url %>">英翻中翻譯底稿下載</a>
<h3>各國翻譯常見名詞</h3>

<table border="1" style="width: 400px">
    <tr>
        <th style="width: 100px">國家</th>
        <th style="width: 100px">各國翻譯常見名詞</th>
    </tr>
    <tr>
        <td colspan="2" class="continent">亞洲</td>
    </tr>
    <% @asia_countries.each do |country| %>
        <tr>
            <td><%= h country.name %></td>
            <td><a href="/serve?blob-key=<%= country.noun_url %>"><%=truncate(country.noun_file_name)%></a></td>
        </tr>
    <% end %>
    <tr>
        <td colspan="2" class="continent">非洲</td>
    </tr>
    <% @africa_countries.each do |country| %>
        <tr>
            <td><%= h country.name %></td>
            <td><a href="/serve?blob-key=<%= country.noun_url %>"><%=truncate(country.noun_file_name)%></a></td>
        </tr>
    <% end %>
    <tr>
        <td colspan="2" class="continent">中東/東歐</td>
    </tr>
    <% @mid_east_countries.each do |country| %>
        <tr>
            <td><%= h country.name %></td>
            <td><a href="/serve?blob-key=<%= country.noun_url %>"><%=truncate(country.noun_file_name)%></a></td>
        </tr>
    <% end %>
    <tr>
        <td colspan="2" class="continent">拉丁美洲</td>
    </tr>
    <% @latin_america_countries.each do |country| %>
        <tr>
            <td><%= h country.name %></td>
            <td><a href="/serve?blob-key=<%= country.noun_url %>"><%=truncate(country.noun_file_name)%></a></td>
        </tr>
    <% end %>

</table>

</body>
</html>